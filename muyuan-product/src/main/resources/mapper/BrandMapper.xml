<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.muyuan.product.infrastructure.persistence.mapper.BrandMapper">
    
    <resultMap type="com.muyuan.product.domains.model.Brand" id="BrandResult">
        <result property="id"    column="id"    />
        <result property="name"    column="name"    />
        <result property="logo"    column="logo"    />
        <result property="orderNum"    column="orderNum"    />
        <result property="englishName"    column="english_name"    />
        <result property="productCount"    column="product_count"    />
        <result property="status"    column="status"    />
        <result property="remark"    column="remark"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="createBy"    column="create_by"    />
        <result property="updateById"    column="update_by_id"    />
        <result property="createById"    column="create_by_id"    />
        <result property="auditStatus"    column="audit_status"    />
    </resultMap>

    <sql id="selectBrandVo">
        select id, name, logo, order_num, english_name, product_count, status, remark, create_time, update_time, update_by, create_by, update_by_id, create_by_id, audit_status from t_brand
    </sql>

    <select id="selectBrandList" parameterType="com.muyuan.product.domains.model.Brand" resultMap="BrandResult">
        <include refid="selectBrandVo"/>
        <where>
                        <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
                        <if test="logo != null  and logo != ''"> and logo = #{logo}</if>
                        <if test="orderNum != null "> and order_num = #{orderNum}</if>
                        <if test="englishName != null  and englishName != ''"> and english_name like concat('%', #{englishName}, '%')</if>
                        <if test="productCount != null "> and product_count = #{productCount}</if>
                        <if test="status != null  and status != ''"> and status = #{status}</if>
                        <if test="updateById != null "> and update_by_id = #{updateById}</if>
                        <if test="createById != null "> and create_by_id = #{createById}</if>
                        <if test="auditStatus != null "> and audit_status = #{auditStatus}</if>
        </where>
    </select>

    <select id="selectBrandById" parameterType="Long" resultMap="BrandResult">
            <include refid="selectBrandVo"/>
            where id = #{id}
    </select>

    <insert id="insertBrand" parameterType="com.muyuan.product.domains.model.Brand">
        insert into t_brand
        <trim prefix="(" suffix=")" suffixOverrides=",">
                    <if test="id != null">id,</if>
                    <if test="name != null">name,</if>
                    <if test="logo != null">logo,</if>
                    <if test="orderNum != null">order_num,</if>
                    <if test="englishName != null">english_name,</if>
                    <if test="productCount != null">product_count,</if>
                    <if test="status != null">status,</if>
                    <if test="remark != null">remark,</if>
                    <if test="createTime != null">create_time,</if>
                    <if test="updateTime != null">update_time,</if>
                    <if test="updateBy != null">update_by,</if>
                    <if test="createBy != null">create_by,</if>
                    <if test="updateById != null">update_by_id,</if>
                    <if test="createById != null">create_by_id,</if>
                    <if test="auditStatus != null">audit_status,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
                    <if test="id != null">#{id},</if>
                    <if test="name != null">#{name},</if>
                    <if test="logo != null">#{logo},</if>
                    <if test="orderNum != null">#{orderNum},</if>
                    <if test="englishName != null">#{englishName},</if>
                    <if test="productCount != null">#{productCount},</if>
                    <if test="status != null">#{status},</if>
                    <if test="remark != null">#{remark},</if>
                    <if test="createTime != null">#{createTime},</if>
                    <if test="updateTime != null">#{updateTime},</if>
                    <if test="updateBy != null">#{updateBy},</if>
                    <if test="createBy != null">#{createBy},</if>
                    <if test="updateById != null">#{updateById},</if>
                    <if test="createById != null">#{createById},</if>
                    <if test="auditStatus != null">#{auditStatus},</if>
        </trim>
    </insert>

    <update id="updateBrand" parameterType="com.muyuan.product.domains.model.Brand">
        update t_brand
        <trim prefix="SET" suffixOverrides=",">
                    <if test="name != null">name = #{name},</if>
                    <if test="logo != null">logo = #{logo},</if>
                    <if test="orderNum != null">order_num = #{orderNum},</if>
                    <if test="englishName != null">english_name = #{englishName},</if>
                    <if test="productCount != null">product_count = #{productCount},</if>
                    <if test="status != null">status = #{status},</if>
                    <if test="remark != null">remark = #{remark},</if>
                    <if test="createTime != null">create_time = #{createTime},</if>
                    <if test="updateTime != null">update_time = #{updateTime},</if>
                    <if test="updateBy != null">update_by = #{updateBy},</if>
                    <if test="createBy != null">create_by = #{createBy},</if>
                    <if test="updateById != null">update_by_id = #{updateById},</if>
                    <if test="createById != null">create_by_id = #{createById},</if>
                    <if test="auditStatus != null">audit_status = #{auditStatus},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteBrandById" parameterType="Long">
        delete from t_brand where id = #{id}
    </delete>

    <delete id="deleteBrandByIds" parameterType="String">
        delete from t_brand where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>